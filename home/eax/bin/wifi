#!/usr/bin/env python3

import subprocess
import sys


def usage():
    print("Usage: " + sys.argv[0] + " <on|off>")
    sys.exit(1)

if len(sys.argv) < 2:
    usage()

opt = sys.argv[1]

if opt == "on":
    cmd = "sudo systemctl start wpa_supplicant@wlp2s0"
elif opt == "off":
    cmd = "sudo systemctl stop wpa_supplicant@wlp2s0"
else:
    usage()

subprocess.call(cmd, shell=True)
