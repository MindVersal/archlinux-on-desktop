#!/usr/bin/env python3

import subprocess
import sys


def usage():
    print("Usage: " + sys.argv[0] + " <on|offt>")
    sys.exit(1)

if len(sys.argv) < 2:
    usage()

opt = sys.argv[1]

if opt == "on":
    cmd = "sudo xbacklight -set 65"
elif opt == "off":
    cmd = "sudo xbacklight -set 95"
else:
    usage()

subprocess.call(cmd, shell=True)
